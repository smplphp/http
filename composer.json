{
  "name"             : "smplphp/http",
  "description"      : "A simple, modern PHP 8 library for representing HTTP requests and responses",
  "minimum-stability": "stable",
  "license"          : "MIT",
  "type"             : "library",
  "authors"          : [
    {
      "name" : "Ollie Read",
      "email": "smpl@ollieread.com"
    }
  ],
  "require"          : {
    "php": "^8.4"
  },
  "require-dev"      : {
    "phpunit/phpunit"    : "^12.0",
    "vimeo/psalm"        : "^6.0",
    "phpstan/phpstan"    : "^2.0",
    "infection/infection": "^0.29.0"
  },
  "autoload"         : {
    "psr-4": {
      "Smpl\\Http\\": "src/"
    }
  },
  "autoload-dev"     : {
    "psr-4": {
      "Smpl\\Http\\Tests\\": "tests/"
    }
  },
  "config"           : {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "scripts"          : {
    "analyse"        : [
      "@php vendor/bin/psalm",
      "@php vendor/bin/phpstan analyse --memory-limit=2G --verbose --ansi"
    ],
    "unit-testing"   : [
      "@php vendor/bin/phpunit --testdox --colors=always --testsuite=Unit"
    ],
    "feature-testing": [
      "@php vendor/bin/phpunit --testdox --colors=always --testsuite=Feature"
    ],
    "mutation"       : [
      "@php vendor/bin/infection --threads=12"
    ]
  }
}
